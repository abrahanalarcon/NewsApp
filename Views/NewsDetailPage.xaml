<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NewsApp.Views.NewsDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalle de Noticia">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Image
                Aspect="AspectFill"
                HeightRequest="200"
                Source="{Binding ImageUrl}">
                <Image.Clip>
                    <RoundRectangleGeometry CornerRadius="12" Rect="0,0,1000,200" />
                </Image.Clip>
            </Image>

            <Label
                FontAttributes="Bold"
                FontSize="20"
                LineBreakMode="WordWrap"
                Text="{Binding Title}"
                TextColor="#333" />

            <StackLayout Orientation="Horizontal" Spacing="15">
                <Label
                    FontSize="12"
                    Text="{Binding Source}"
                    TextColor="#007ACC"
                    VerticalOptions="Center" />
                <Label
                    FontSize="12"
                    Text="{Binding PublishedAt, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                    TextColor="#999"
                    VerticalOptions="Center" />
            </StackLayout>

            <Label
                FontSize="16"
                LineBreakMode="WordWrap"
                Text="{Binding Description}"
                TextColor="#555" />

            <Button
                BackgroundColor="#007ACC"
                Command="{Binding OpenUrlCommand}"
                Text="Leer artÃ­culo completo"
                TextColor="White" />
        </StackLayout>
    </ScrollView>

</ContentPage>